<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/masterRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_offwhite"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ErielLauncher"
    tools:ignore="HardcodedText" >

    <TextView
        android:id="@+id/pageNumTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="1"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/dividerLayout"
        android:layout_below="@id/pageNumTxt"
        android:layout_marginBottom="20dp" >

        <RelativeLayout
            android:id="@+id/contentRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/contentTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="15dp"
                android:text="Your footsteps crunch on the dried leaves that blanket the forest floor. A gust briefly whips the leaves into the air, obscuring your vision. As they settle, you see the trees thin ahead.\n\nYou enter the clearing, clutching your small knife firmly in your hand. The blood running from the wound in your shoulder threatens to loose your grip, but you&apos;re confident that your resolve is enough to deliver a lethal blow regardless.\n\nYet you hesitate. Are you truly ready for what awaits you in the foreign ruins that lie before you?"
                android:textAppearance="?android:attr/textAppearanceMedium"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/choice1Btn"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_alignLeft="@id/contentTxt"
                android:layout_alignRight="@+id/contentTxt"
                android:layout_below="@id/contentTxt"
                android:layout_marginBottom="5dp"
                android:gravity="center_vertical|center_horizontal|left"
                android:text="Yes, I&apos;m ready." />

            <Button
                android:id="@+id/choice2Btn"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_alignLeft="@id/choice1Btn"
                android:layout_alignRight="@+id/contentTxt"
                android:layout_below="@id/choice1Btn"
                android:layout_marginBottom="5dp"
                android:gravity="center_vertical|center_horizontal|left"
                android:text="No, I was too afraid to go on. Let some other bastard die in a spike pit trap." />

            <Button
                android:id="@+id/choice3Btn"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_alignLeft="@id/choice2Btn"
                android:layout_alignParentLeft="false"
                android:layout_alignParentTop="false"
                android:layout_alignRight="@+id/contentTxt"
                android:layout_below="@id/choice2Btn"
                android:gravity="center_vertical|center_horizontal|left"
                android:text="I should probably check my supplies once more to be sure I&apos;m ready." />

        </RelativeLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/dividerLayout"
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:layout_above="@id/healthBarLay"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="false"
        android:layout_marginBottom="10dp"
        android:background="#000000" >

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/healthBarLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#000000"
        android:paddingLeft="5dp" >

        <TextView
            android:id="@+id/healthLabelTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Health"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFFFFF" />

        <ProgressBar
            android:id="@+id/healthBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="250dp"
            android:layout_height="10dp"
            android:layout_alignBottom="@id/healthLabelTxt"
            android:layout_alignParentTop="false"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/healthLabelTxt"
            android:max="100"
            android:progress="100" />
    </RelativeLayout>

</RelativeLayout>